{
  "Logging": {
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Warning",
        "System": "Error",
        "Microsoft": "Error"
      }
    },
    "LogLevel": {
      "Default": "Warning",
      "System": "Error",
      "Microsoft": "Error"
    }
  },
  "AllowedHosts": "*",
  "Settings": {
    "FoxIDsEndpoint": "https://localhost:44330", // or custom domain "https://id.yyyyxxxx.com"
    "FoxIDsControlEndpoint": "https://localhost:44331", // or custom domain "https://control.yyyyxxxx.com"
    "Address": {
      "CompanyName": "xxx",
      "AddressLine1": "xxx",
      "PostalCode": "xxx",
      "City": "xxx",
      "Country": "xxx"
    },
    // Options to show/hide settings in the FoxIDs client user interface
    "ClientUi": {
      // Hide company branding (company name and address) settings 
      "ShowBrandingSettings": true,
      // Hide SMS settings
      "ShowSmsSettings": true,
      // Hide Email settings
      "ShowMailSettings": true
    },
    "Options": {
      "Log": "Stdout",
      "DataStorage": "File",
      "KeyStorage": "None",
      "Cache": "File",
      "DataCache": "None"
    },
    "MasterSeedEnabled": true


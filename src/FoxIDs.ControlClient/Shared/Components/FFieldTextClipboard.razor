@inherits FInputBase<string>

<div class="active-group active">
    <div class="card card-row bg-light">
        <div class="card-body">
            @CurrentValue
        </div>
        <div>
            <button type="button" class="btn btn-link" @onclick="@(async () => await ClipboardLogic.WriteTextAsync(@CurrentValue))"><i class="bi bi-copy" title="Click to copy"></i></button>
        </div>
    </div>
    <Label For="@For" class="label-control" />
</div>

@code {
    [Inject]
    public ClipboardLogic ClipboardLogic { get; set; }
}
